// End Ship Terrascript
// Converted to keep only block placements (no entities).

// Block Palette
str PURPUR_BLOCK = "minecraft:purpur_block";
str PURPUR_PILLAR = "minecraft:purpur_pillar";
str PURPUR_STAIRS = "minecraft:purpur_stairs";
str PURPUR_SLAB = "minecraft:purpur_slab";
str OBSIDIAN = "minecraft:obsidian";
str END_STONE_BRICKS = "minecraft:end_stone_bricks";
str END_ROD = "minecraft:end_rod";
